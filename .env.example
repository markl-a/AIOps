# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai  # openai, anthropic
DEFAULT_MODEL=gpt-4-turbo-preview
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=4096

# Application Settings
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# API Security Settings
ENABLE_AUTH=true  # Enable/disable authentication (set to false for development)
JWT_SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ADMIN_PASSWORD=changeme_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=60
API_KEYS_FILE=.aiops_api_keys.json

# Rate Limiting
ENABLE_RATE_LIMIT=true
RATE_LIMIT=100  # Requests per minute (global default)

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000  # Comma-separated list

# GitHub Integration (optional)
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=your_repo_here

# Redis Cache (optional but recommended for production)
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS=false

# Monitoring (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url
